<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudPlaylistManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200_light</item>
        <item name="colorPrimaryVariant">@color/teal_700_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSolidPrimary">@color/white</item>
        <item name="colorPopupBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200_light</item>
        <item name="colorPrimaryVariant">@color/teal_700_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSolidPrimary">@color/white</item>
        <item name="colorPopupBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Other Settings. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CloudPlaylistManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CloudPlaylistManager.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CloudPlaylistManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>